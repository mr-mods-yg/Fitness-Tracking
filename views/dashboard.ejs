    <div class="container">
        <div id="dashboard" class="dashboard">
            <div class="card">
                <h2>Activity Overview</h2>
                <canvas id="activityChart"></canvas>
            </div>
            <div class="card">
                <h2>Nutrition Summary</h2>
                <canvas id="nutritionChart"></canvas>
            </div>
            <div class="card">
                <h2>Sleep Patterns</h2>
                <canvas id="sleepChart"></canvas>
            </div>
            <div class="card">
                <h2>Quick Log</h2>
                <form id="quickLogForm">
                    <select id="logType">
                        <option value="activity">Activity</option>
                        <option value="nutrition(Carbs)">Nutrition(Carbs)</option>
                        <option value="nutrition(Protein)">Nutrition(Protein)</option>
                        <option value="nutrition(Fat)">Nutrition(Fat)</option>
                        <option value="sleep">Sleep</option>
                    </select>
                    <input type="text" id="logValue" placeholder="Enter value">
                    <button type="submit">Log</button>
                </form>
            </div>
        </div>
    </div>
